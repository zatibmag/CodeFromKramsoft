{% extends 'base.html.twig' %}

{% block title %}Sprint{% endblock %}

{% block body %}
    <h1>Sprint</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sprint.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sprint.name }}</td>
            </tr>
            <tr>
                <th>NumberOfStoryPoints</th>
                <td>{{ sprint.numberOfStoryPoints }}</td>
            </tr>
            <tr>
                <th>StartAt</th>
                <td>{{ sprint.startAt ? sprint.startAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndAt</th>
                <td>{{ sprint.endAt ? sprint.endAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Sprint Stories</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Created At</th>
            <th>Story Points Done</th>
            <th>Story Points To Do</th>
        </tr>
        </thead>
        <tbody>
        {% for sprintStory in sprint.sprintStories %}
            <tr>
                <td>{{ sprintStory.id }}</td>
                <td>{{ sprintStory.createdAt ? sprintStory.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sprintStory.storyPointsDone }}</td>
                <td>{{ sprintStory.storyPointsToDo }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_sprint_index') }}">back to list</a>

    <a href="{{ path('app_sprint_edit', {'id': sprint.id}) }}">edit</a>
    <a href="{{ path('app_sprint_story_new', {'id': sprint.id}) }}">add sprint story</a>

    {{ include('sprint/_delete_form.html.twig') }}
{% endblock %}
